@model WebDependencyInjectMVC.Services.Product

<h1>Thong Tin San Pham</h1>

@if (Model == null)
{

    <div class="alert alert-danger">Khong tin thay San Pham</div>

}
else
{
    <div class="card" >
        <div class="card-body alert alert-danger">
            <p>Id : @Model.Id</p>
            <p>Name : @Model.Name</p>
            <p>Price : @Model.Price</p>
        </div>

    </div>
}